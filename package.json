{
  "name": "js-idm-wallet",
  "version": "0.0.0",
  "description": "The reference implementation of the IDM Wallet in JavaScript",
  "main": "index.js",
  "homepage": "https://github.com/ipfs-shipyard/js-idm-wallet#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs-shipyard/js-idm-wallet.git"
  },
  "keywords": [
    "idm",
    "wallet",
    "js",
    "javascript",
    "sdk"
  ],
  "bugs": {
    "url": "https://github.com/ipfs-shipyard/js-idm-wallet/issues"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "build": "babel src --out-dir lib --ignore '**/*.test.js'",
    "lint": "eslint --ignore-path .gitignore .",
    "prerelease": "npm t && npm run lint",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin master"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.js"
    ],
    "testPathIgnorePatterns": [
      "/demo/",
      "/lib/",
      "/es/",
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-private-methods": "^7.3.2",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-jest": "^24.1.0",
    "babel-preset-moxy": "^3.0.4",
    "commitlint": "^7.5.2",
    "eslint": "^5.13.0",
    "eslint-config-moxy": "^7.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "standard-version": "^5.0.0"
  }
}
