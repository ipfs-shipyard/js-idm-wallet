{
  "name": "idm-wallet",
  "version": "0.3.5",
  "description": "The reference implementation of the IDM Wallet in JavaScript",
  "main": "lib/index.js",
  "module": "es/index.js",
  "homepage": "https://github.com/ipfs-shipyard/js-idm-wallet#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs-shipyard/js-idm-wallet.git"
  },
  "keywords": [
    "idm",
    "wallet",
    "js",
    "javascript",
    "sdk",
    "identity",
    "did",
    "verifiable",
    "credentials",
    "decentralized"
  ],
  "bugs": {
    "url": "https://github.com/ipfs-shipyard/js-idm-wallet/issues"
  },
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "build:commonjs": "BABEL_ENV=commonjs babel src -d lib --delete-dir-on-start",
    "build:es": "BABEL_ENV=es babel src -d es --delete-dir-on-start",
    "build": "npm run build:commonjs && npm run build:es",
    "test": "jest",
    "lint": "eslint .",
    "prerelease": "npm t && npm run lint && npm run build",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin master"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/__tests__/.*$"
    ],
    "testRegex": "/__tests__/.*\\.test\\.js$",
    "testPathIgnorePatterns": [
      "/demo/",
      "/lib/",
      "/es/",
      "/node_modules/"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-private-methods": "^7.3.2",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-jest": "^24.1.0",
    "babel-preset-moxy": "^3.0.4",
    "commitlint": "^7.5.2",
    "eslint": "^5.13.0",
    "eslint-config-moxy": "^7.0.1",
    "husky": "^2.1.0",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.4",
    "standard-version": "^5.0.0"
  },
  "dependencies": {
    "buffer": "^5.2.1",
    "crypto-key-composer": "^0.1.3",
    "delay": "^4.2.0",
    "did-ipid": "^0.3.0",
    "hex-array": "^1.0.0",
    "human-crypto-keys": "^0.1.4",
    "ipfs": "git://github.com/satazor/js-ipfs.git#ipfs-camp",
    "level": "^5.0.1",
    "lodash": "^4.17.11",
    "normalize-value": "^1.0.1",
    "orbit-db": "^0.20.1",
    "p-defer": "^2.1.0",
    "p-map": "^2.1.0",
    "p-props": "^2.0.0",
    "p-reduce": "^2.1.0",
    "p-series": "^2.1.0",
    "pico-signals": "^1.0.0",
    "pify": "^4.0.1",
    "scrypt-async": "^2.0.1",
    "zxcvbn": "^4.4.2"
  }
}
